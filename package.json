{
  "name": "dpm-shared",
  "version": "1.0.0",
  "description": "Shared UI component library for DPM applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "dist/**/*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.css"
    },
    "./button": {
      "import": "./dist/components/Button.js",
      "types": "./dist/components/Button.d.ts"
    },
    "./counter": {
      "import": "./dist/components/counter.js",
      "types": "./dist/components/counter.d.ts"
    },
    "./api": {
      "import": "./dist/api/index.js",
      "types": "./dist/api/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && pnpm run build:styles",
    "build:styles": "pnpm run build:tailwind",
    "build:tailwind": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles/index.css --minify",
    "lint": "eslint .",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "turbo": "^2.7.3"
  },
  "peerDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "i18next": "^25.7.3",
    "postcss": "^8.5.6",
    "react-i18next": "^16.5.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20"
  }
}