{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@/api": ["src/api/*"],
      "@/components": ["src/components/*"],
      "@/hooks": ["src/hooks/*"],
      "@/i18n": ["src/i18n/*"],
      "@/tenant": ["src/tenant/*"],
      "@/types": ["src/types/*"],
      "@/utils": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
